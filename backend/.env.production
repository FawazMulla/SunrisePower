# Production Environment Variables for Solar CRM Platform
# Copy this file to .env and update the values for your production environment

# Django Settings
SECRET_KEY=your-super-secret-key-here-generate-new-one
DEBUG=False
DJANGO_SETTINGS_MODULE=solar_crm.settings.production

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-app.onrender.com

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@sunrisepower.com

# External API Keys
COHERE_API_KEY=your-cohere-api-key
EMAILJS_WEBHOOK_SECRET=your-emailjs-webhook-secret

# Admin Configuration
ADMIN_URL=admin/
ADMIN_EMAILS=admin@sunrisepower.com

# Error Tracking (Optional)
SENTRY_DSN=your-sentry-dsn-here

# Log Level
DJANGO_LOG_LEVEL=INFO

# Frontend Directory (relative to backend)
FRONTEND_DIR=../frontend

# Note: Using SQLite3 database (db.sqlite3) - no additional database configuration needed